{
  "name": "Free AWS Cloud Bootcamp Development Environment",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "features": {
    "ghcr.io/devcontainers/features/docker-in-docker:2": {}
    // "ghcr.io/devcontainers/features/github-cli:1": {}
  },
  "forwardPorts": [
    3000,
    4567,
    2000
  ],
  "portsAttributes": {
    "3000": {
      "label": "Cruddur Frontend",
      "onAutoForward": "notify"
    },
    "4567": {
      "label": "Cruddur Backend",
      "onAutoForward": "notify"
    },
    "2000": {
      "label": "AWS X-Ray Daemon",
      "onAutoForward": "notify"
    }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "42Crunch.vscode-openapi",
        "ms-azuretools.vscode-docker",
        "ms-python.python",
        "hashicorp.terraform",
        "redhat.ansible",
        "redhat.vscode-yaml",
        "amazonwebservices.aws-toolkit-vscode"
      ],
      "settings": {
        "terminal.integrated.profiles.linux": {
          "bash": {
            "path": "/usr/bin/bash",
            "icon": "terminal-bash"
          }
        },
        "terminal.integrated.defaultProfile.linux": "bash"
      }
    }
  },
  // "settings": {
  //   "terminal.integrated.profiles.linux": {
  //     "bash": {
  //       "path": "/usr/bin/bash",
  //       "icon": "terminal-bash"
  //     }
  //   },
  // "terminal.integrated.defaultProfile.linux": "bash"
  // },
  "remoteUser": "bootcamp",
  "runArgs": [
      "--env-file",
      ".devcontainer/.env"
    ],
  "postAttachCommand": "cd ./frontend-react-js && npm install && cd ../backend-flask && pip install -r requirements.txt"
}